{
  "name": "red-components",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "description": "Accessible unstyled web components",
  "author": "Samuel Adebayo <sambayo28@gmail.com>",
  "license": "MIT",
  "keywords": [
    "web components",
    "accessible",
    "unstyled",
    "customizable"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thesambayo/red-components.git"
  },
  "homepage": "",
  "scripts": {
    "changeset": "changeset",
    "publish:packages": "changeset publish",
    "version:packages": "changeset version",
    "build": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript --silent",
    "story:dev": "storybook dev -p 6006 --no-open",
    "story:build": "storybook build",
    "showcase:dev": "pnpm build && pnpm --filter showcase dev",
    "showcase:build": "pnpm build && pnpm --filter showcase build",
    "showcase:lint": "pnpm --filter showcase lint"
  },
  "dependencies": {
    "@changesets/cli": "^2.28.1",
    "@floating-ui/dom": "^1.6.13",
    "@lit-labs/signals": "^0.1.2",
    "@lit/context": "^1.1.4",
    "@lit/react": "^1.0.7",
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@storybook/addon-actions": "^8.5.8",
    "@storybook/addon-essentials": "^8.5.8",
    "@storybook/addon-links": "^8.5.8",
    "@storybook/blocks": "^8.5.8",
    "@storybook/builder-vite": "^8.5.8",
    "@storybook/test": "^8.5.8",
    "@storybook/web-components": "^8.5.8",
    "@storybook/web-components-vite": "^8.5.8",
    "@types/node": "^22.13.5",
    "@types/react": "^19.0.10",
    "react": "^19.0.0",
    "rollup": "^4.34.8",
    "rollup-plugin-filesize": "^10.0.0",
    "storybook": "^8.5.8",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  }
}
